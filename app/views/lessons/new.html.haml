%div.container
  = form_tag '/lessons/submit_grades', method: 'post' do
    = fields_for :lessons do
      - Lesson.all.each do |les|
        %div.field
          %label.label #{les.name}
          %div.select.is-info
            %select.select.is-multiple{id: "lesson#{les.id}", name: les.name}
              - for i in 1..10
                %option{value: i } #{i}
    = submit_tag
