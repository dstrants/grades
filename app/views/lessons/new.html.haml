%div.container
  = form_tag '/lessons/submit_grades', method: 'post' do
    %submit.button.is-primary.is-pulled-right Save
    .columns
      .column.is-half.is-offset-one-quarter.box.has-text-centered{id: 'accordion'}
        -for i in 1..8
          %h3.title Section #{i}
          %div
            - Lesson.where(semester: i).each do |les|
              %label.label #{les.name}
              %div.select.is-info
                %select.select.is-multiple{id: "lesson#{les.id}", name: les.name}
                  - for i in 1..10
                    - if les.grade == i
                      %option{value: i, selected: 'selected'} #{i}
                    - else
                      %option{value: i } #{i}
:javascript
  $( function() {
    $( "#accordion" ).accordion({
      collapsible: true
    });
  } );
